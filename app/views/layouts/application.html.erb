<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script src="https://kit.fontawesome.com/429d010fb7.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark" style="padding: 8px 16px;">
        <div class="container mx-5 px-2">
          <a class="navbar-brand" href="/">
            <span>Bookers</span>
          </a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown" aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <% if user_signed_in? %>
                <li style="padding: 8px;">
                  <%= link_to user_path(current_user.id), class: "navbar-link text-light" do%>
                    <i class="fas fa-home" aria-hidden="true"></i> Home
                  <% end %>
                </li>
                <li style="padding: 8px;">
                  <%= link_to users_path, class: "navbar-link text-light" do %>
                    <i class="fas fa-users" aria-hidden="true"></i> Users
                  <% end %>
                </li>
                <li style="padding: 8px;">
                  <%= link_to books_path, class: "navbar-link text-light" do %>
                    <i class="fas fa-book-open" aria-hidden="true"></i> Books
                  <% end %>
                </li>
                <li style="padding: 8px;">
                  <%= link_to destroy_user_session_path, method: :delete, class: "navbar-link text-light" do %>
                    <i class="fas fa-sign-out-alt" aria-hidden="true"></i> Log out
                  <% end %>
                </li>
              <% else %>
                <li style="padding: 8px;">
                  <%= link_to root_path, class: "navbar-link text-light" do%>
                    <i class="fas fa-home" aria-hidden="true"></i> Home
                  <% end %>
                </li>
                <li style="padding: 8px;">
                  <%= link_to home_about_path, class: "navbar-link text-light" do %>
                    <i class="fas fa-link" aria-hidden="true"></i> About
                  <% end %>
                </li>
                <li style="padding: 8px;">
                  <%= link_to new_user_registration_path, class: "navbar-link text-light"  do %>
                    <i class="fas fa-user-plus" aria-hidden="true"></i> Sign up
                  <% end %>
                </li>
                <li style="padding: 8px;">
                  <%= link_to new_user_session_path, class: "navbar-link text-light" do %>
                    <i class="fas fa-sign-in-alt" aria-hidden="true"></i> Log in
                  <% end %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    

  </header>
  <main style="margin:0 20px;">
    <p style="margin_bottom:16px;"><%= flash[:notice] %></p>
    <%= yield %>
  </main>
  <footer>
    <div class="container mt-5">
      <div class="row">
        <div class="mx-auto"><p>CopyRight Infratop.inc</p></div>
      </div>
    </div>
  </footer>
  </body>
</html>
